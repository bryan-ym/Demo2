<!DOCTYPE html>
<html>
<head>
  <title>Demo2</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <%= render './users/user_bar' %>
  
  <% if flash[:notice] %>
    <p style="color: green"><%=flash[:notice] %></p>
  <% end%>

  <% if flash[:error] %>
    <p style="color: red"><%=flash[:error] %></p>
  <% end%>

<%= yield %>

</body>
</html>
