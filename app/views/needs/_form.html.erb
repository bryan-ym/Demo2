  <div class="field">
    <%= f.label "提出人" %><br />
    <%= f.text_field :submitter %>
  </div>
  <div class="field">
    <%= f.label "提出人信息" %><br />
    <%= f.text_area :submitter_info, :cols=>90, :rows=> 3 %>
  </div>
  <div class="field">
    <%= f.label "最终需求描述" %><br />
    <%= f.text_area :final_req, :cols=>90, :rows=> 3 %>
  </div>
  <div class="field">
    <%= f.label "需求状态" %><br />
    <%= f.select :status, reqstatus_list %>
  </div>
  <div class="actions">
